{
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string"
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "configure": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "cron": {
      "type": "string"
    },
    "$schema": {
      "type": "string"
    }
  },
  "required": [
    "name",
    "version",
    "description",
    "skills"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
